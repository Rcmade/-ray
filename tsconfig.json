{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2019", // Updated to ES2019
    "moduleResolution": "node", // Updated to "node"
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": ["ES2019"], // Optionally added to align with target

    // Path alias configuration
    "baseUrl": "./src", // Set the base directory to ./src
    "paths": {
      "@/*": ["*"] // Map @/ to the src folder
    }
  },
  "include": ["src", "setup-autocomplete.js"],
  "exclude": ["node_modules", "**/_tests__/*"]
}
