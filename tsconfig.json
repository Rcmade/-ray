{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2015",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/_tests__/*"]
}
